@{
	ViewData["Title"] = "Empresas";
}

<div class="text-center">
	<h1 class="display-4">Listagem de Empresas</h1>

	<br/>

	<div class="d-grid gap-2 col-6 mx-auto">
		<a class="btn btn-dark" role="button" asp-controller="Empresas" asp-action="Cadastrar">Cadastrar Empresa</a>
	</div>

	<br/>

	<table class="table table-striped">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">UF</th>
				<th scope="col">Nome Fantasia</th>
				<th scope="col">CNPJ</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<th scope="row">1</th>
				<td>SC</td>
				<td>Empresa 1</td>
				<td>87.790.436/0001-00</td>
				<td><a role="button" class="btn btn-dark" asp-controller="Empresas" asp-action="Editar">Editar</a></td>
			</tr>
			<tr>
				<th scope="row">2</th>
				<td>SP</td>
				<td>Empresa 2</td>
				<td>47.334.468/0001-86</td>
				<td><a role="button" class="btn btn-dark" asp-controller="Empresas" asp-action="Editar">Editar</a></td>
			</tr>
			<tr>
				<th scope="row">3</th>
				<td>PR</td>
				<td>Empresa 3</td>
				<td>68.896.967/0001-37</td>
				<td><a role="button" class="btn btn-dark" asp-controller="Empresas" asp-action="Editar">Editar</a></td>
			</tr>
		</tbody>
	</table>

	<br/>

	<div class="d-grid gap-2 col-6 mx-auto">
		<a class="btn btn-dark" role="button" asp-controller="Empresas" asp-action="Remover">Remover Empresa</a>
	</div>

</div>


